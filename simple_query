SELECT 
  (SELECT word FROM (SELECT * FROM information_schema.tables WHERE table_schema = word_links.from_word_lang) WHERE id=from_word_id),
  (SELECT word FROM (SELECT * FROM information_schema.tables WHERE table_schema = word_links.from_word_lang) WHERE id=from_word_id)
  FROM word_links
